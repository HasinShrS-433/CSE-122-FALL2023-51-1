#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long a;
    cin>>a;
    int b=0;
    while(a!=0)
    {
        if(a%10==4 || a%10==7)
        {
            b++;
        }
        a=a/10;
    }
    if (b==7 || b==4)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }
    return 0;
}




///////////////////////////////////////////
Alter Solution:
#include<bits/stdc++.h>
using namespace std;
int main()
{
   long long a;
   cin>>a;
   int b=0;
   string s=to_string(a);
   for(int i=0;i<s.size();i++){
     if(s[i]=='7'||s[i]=='4')
     {
         b++;
     }
   }
    if (b==7 || b==4)
    {
        cout<<"YES"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }
    return 0;
}
